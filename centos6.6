  config.vm.define 'centos6.6' do |vagrant|
    vagrant.vm.box = "grtjn/centos-6.6"
    vagrant.vm.network "private_network", ip: "172.16.3.2"
    vagrant.vm.network "forwarded_port", guest: 22, host: 2203, id: 'ssh'
    vagrant.vm.network "forwarded_port", guest: 80, host: 8002
    vagrant.vm.network "forwarded_port", guest: 443, host: 4432
  end

end
